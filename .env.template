# Supabase Environment Configuration Template
# ==========================================
# 
# This is a template for setting up your Supabase environment variables.
# Copy this file to .env and fill in your actual Supabase credentials.
# 
# IMPORTANT: Never commit .env file to version control!

# Supabase Project Configuration
# ==============================
# Get these values from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT_ID/settings/api

SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database Configuration (optional - for direct connections)
# ==========================================================
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.YOUR_PROJECT_ID.supabase.co:5432/postgres

# Application Settings
# ===================
ENVIRONMENT=development
DEBUG_MODE=true

# Backup Configuration
# ===================
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
